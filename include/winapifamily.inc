.err<Unknown WINAPI_FAMILY value.>
endif


ifndef WINAPI_PARTITION_PC_APP
define WINAPI_PARTITION_PC_APP (WINAPI_FAMILY EQ WINAPI_FAMILY_DESKTOP_APP OR WINAPI_FAMILY EQ WINAPI_FAMILY_PC_APP)
endif

ifndef WINAPI_PARTITION_PHONE_APP
define WINAPI_PARTITION_PHONE_APP (WINAPI_FAMILY EQ WINAPI_FAMILY_PHONE_APP)
endif

ifndef WINAPI_PARTITION_GAMES
define WINAPI_PARTITION_GAMES (WINAPI_FAMILY EQ WINAPI_FAMILY_GAMES OR WINAPI_FAMILY EQ WINAPI_FAMILY_DESKTOP_APP)
endif

ifndef WINAPI_PARTITION_SYSTEM
define WINAPI_PARTITION_SYSTEM (WINAPI_FAMILY EQ WINAPI_FAMILY_SYSTEM OR WINAPI_FAMILY EQ WINAPI_FAMILY_GAMES OR WINAPI_FAMILY EQ WINAPI_FAMILY_SERVER)
endif

